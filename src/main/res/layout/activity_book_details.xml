<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BookDetails"
    android:padding="8dp">

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_view"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/tv_details_img"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:background="#9E9A9A"/>

           <TableLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:stretchColumns="1"
               android:padding="8dp">

               <TableRow
                   android:layout_marginBottom="8dp"
                  >

                   <TextView
                       android:id="@+id/tv_details_title"
                       android:ellipsize="end"
                       android:gravity="left"
                       android:layout_width="260dp"
                       android:maxWidth="260dp"
                       android:layout_gravity="fill"
                       android:maxLines="4"
                       android:text="Book name"
                       android:visibility="visible"
                       android:textSize="16dp"
                       android:textStyle="bold"/>

                   <TextView
                       android:text="@string/book_name"
                       android:gravity="right"
                       android:fontFamily="@font/yekan"
                       android:textSize="24dp"
                       android:textStyle="normal"/>

               </TableRow>
               <TableRow
                   android:layout_marginBottom="8dp">

                   <TextView
                       android:id="@+id/tv_details_authors"
                       android:layout_width="260dp"
                       android:maxWidth="260dp"
                       android:gravity="left"
                       android:text="Book authors"
                       android:textSize="16dp"
                       android:textStyle="bold"/>

                   <TextView
                       android:text="@string/book_authors"
                       android:gravity="right"
                       android:fontFamily="@font/yekan"
                       android:textSize="24dp"
                       android:textStyle="normal"/>

               </TableRow>

               <TableRow
                   android:layout_marginBottom="8dp">
                   <TextView
                       android:id="@+id/tv_details_publisher"
                       android:text="Book publisher"
                       android:gravity="left"
                       android:layout_width="260dp"
                       android:maxWidth="260dp"
                       android:textSize="16dp"
                       android:textStyle="bold"
                       />
                   <TextView
                       android:text="@string/book_publisher"
                       android:gravity="right"
                       android:fontFamily="@font/yekan"
                       android:textSize="24dp"
                       android:textStyle="normal"/>
               </TableRow>

               <TableRow
                   android:layout_marginBottom="8dp">

                   <TextView
                       android:id="@+id/tv_details_price"
                       android:text="Book price"
                       android:gravity="left"
                       android:layout_width="260dp"
                       android:maxWidth="260dp"
                       android:textSize="16dp"
                       android:textStyle="bold"
                       />

                   <TextView
                       android:text="@string/book_price"
                       android:gravity="right"
                       android:fontFamily="@font/yekan"
                       android:textSize="24dp"
                       android:textStyle="normal"/>

               </TableRow>

               <TableRow
                   android:layout_marginBottom="8dp">

                   <TextView
                       android:id="@+id/tv_details_pages"
                       android:text="Book pages"
                       android:gravity="left"
                       android:layout_width="260dp"
                       android:maxWidth="260dp"
                       android:textSize="16dp"
                       android:textStyle="bold"
                       />

                   <TextView
                       android:text="@string/book_pages"
                       android:gravity="right"
                       android:fontFamily="@font/yekan"
                       android:textSize="24dp"
                       android:textStyle="normal"/>

               </TableRow>
               <TableRow
                   android:layout_marginBottom="8dp">

                   <TextView
                       android:id="@+id/tv_details_publish_year"
                       android:text="Book publish year"
                       android:gravity="left"
                       android:layout_width="260dp"
                       android:maxWidth="260dp"
                       android:textSize="16dp"
                       android:textStyle="bold"
                       />

                   <TextView
                       android:text="@string/publish_year"
                       android:gravity="right"
                       android:fontFamily="@font/yekan"
                       android:textSize="24dp"
                       android:textStyle="normal"/>

               </TableRow>





           </TableLayout>


        </LinearLayout>
        <Button
            android:id="@+id/btn_download"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_round"
            android:text="دانلود"
            android:fontFamily="@font/yekan"
            android:textSize="24dp"
            android:layout_gravity="bottom"
            android:layout_margin="8px"/>

    </android.support.v7.widget.CardView>


</LinearLayout>